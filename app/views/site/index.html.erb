<section id="main" class="nopacity">
  <header>
    <span class="avatar"><%= image_tag('thai-food.jpg')%></span>
    <h3>Today's lunch is</h3>
    <h1><%= link_to @restaurant.title, @restaurant %></h1>
    <p>The last time we visited was <%= time_ago_in_words(@restaurant.last_visited) %> ago</p>
  </header>

  <footer>
    <div id="rating" class="center"></div> 

    <% if user_signed_in? %>
      <ul class="icons">
        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "fa-sign-out" %></li>
      </ul>
    <% end %>
  </footer>

</section>

<script type="text/javascript">
  $(document).on('ready page:load', function() {
    $(".nopacity").animate({opacity: 0.95}, 150);

    $("#rating").rateYo({
      starWidth: "50px",
      rating: <%= @restaurant.average_rating %>,
      ratedFill: "#F0CE4E",
      readOnly: true
    });
  });
</script>
